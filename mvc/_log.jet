#._
@inc(_object.)
#._

#.log
<h1>User's Actions Log</h1>
<table width="80%">
  <tr style="background:skyblue">
    <th width="17%">Date</th>
    <th width="17%">User</th>
    <th>Description</th>
  </tr>
@loop($e_log)
  <tr style="background:{{$_ % 2 ? '#eee' : ''}}">
    <td>{{$row->dt}}</td>
    <td>{{$row->user}}</td>
    <td align="left">{{$row->comment}}</td>
  </tr>
  @empty
  <tr>
    <td colspan="4"><h1>No Log Records</h1></td>
  </tr>
~loop
</table>
#.log